<?xml version="1.0" encoding="utf-8"?>
<!-- set layout_height to wrap_content instead of fill_parent so it won't fill the entire list  -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingLeft="10dp" >
    
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="3dp" >
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp" >
    <TextView 
        android:text="@string/score_label" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingRight="2dp" />
    <TextView 
        android:id="@+id/single_test_score" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:paddingRight="5dp" />
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp" >
    <TextView 
        android:text="@string/class_label" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingRight="2dp" />
    <TextView 
        android:id="@+id/user_class" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp" />
    </LinearLayout>
    
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp" >
    <TextView 
        android:text="@string/run_time_label" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingRight="2dp"/>    
    <TextView 
        android:id="@+id/run_time" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp" />
    </LinearLayout>
    
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp" >
    <TextView 
        android:text="@string/pullup_label2" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingRight="2dp" />    
    <TextView 
        android:id="@+id/pullup_count" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp" />
    </LinearLayout>
    
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp" >
    <TextView 
        android:text="@string/crunches_label2" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingRight="2dp" />
    <TextView 
        android:id="@+id/situp_count" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp" />
	</LinearLayout>
    
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp" >
    <TextView 
        android:text="@string/test_date_label" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingRight="2dp" />
    <TextView 
        android:id="@+id/test_date" 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="20dp" />
	</LinearLayout>
	
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="1dp" >

	    <Button
	        android:id="@+id/share_button"
	        android:layout_width="160dp"
	        android:layout_height="50dp"
	        android:drawableRight="@drawable/social_share"
	        android:gravity="center|left"
	        android:text="@string/score_share"
	        android:textSize="18dp" />

	    <Button
	        android:id="@+id/delete_button"
	        android:layout_width="115dp"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:drawableRight="@drawable/delete"
	        android:gravity="center|left"
	        android:text="@string/delete_button"
	        android:textSize="18dp" />
	</LinearLayout>

</LinearLayout><!-- From: file:/Users/patdugan/GitHub/usmc-pro-fitness/USMCProFitMainActivity/src/main/res/layout/score_item_detailed.xml -->